<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_brown_100"
    tools:context=".Reservation">

    <ImageView
        android:id="@+id/imageView"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="3"
        android:src="@drawable/reserve_state" />

    <GridLayout
        android:id="@+id/resTableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_background">

        <Button
            android:id="@+id/seat1"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_background"
            android:text="1" />

        <Button
            android:id="@+id/seat2"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/button_background"
            android:text="2" />

        <Button
            android:id="@+id/seat3"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_background"
            android:text="3" />

        <Button
            android:id="@+id/seat4"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_background"
            android:text="4" />

        <Button
            android:id="@+id/seat7"
            android:layout_row="2"
            android:layout_rowSpan="3"
            android:layout_column="3"
            android:layout_gravity="fill"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_background"
            android:text="7" />

        <Button
            android:id="@+id/seat5"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_background"
            android:text="5" />

        <Button
            android:id="@+id/seat6"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_background"
            android:text="6" />

        <Button
            android:id="@+id/seat8"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_marginTop="50dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/button_background"
            android:text="8" />

        <Button
            android:id="@+id/seat9"
            android:layout_row="5"
            android:layout_column="2"
            android:layout_marginTop="50dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/button_background"
            android:text="9" />

        <Button
            android:id="@+id/seat10"
            android:layout_row="5"
            android:layout_column="3"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_background"
            android:text="10" />
    </GridLayout>

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resTableLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/solid"
        android:text="back"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resTableLayout"

        android:layout_marginTop="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="30dp"

        android:layout_toStartOf="@+id/res"
        android:layout_toLeftOf="@+id/res"
        android:layout_toEndOf="@+id/back"
        android:layout_toRightOf="@+id/back"
        android:background="@drawable/solid"
        android:text="인원선택"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/res"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resTableLayout"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="35dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/solid"
        android:text="예약하기"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/reselectBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/imageView"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/imageView"
        android:background="@drawable/refresh_btn"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/test_init"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:text="Init" />

</RelativeLayout>